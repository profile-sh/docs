---
layout: default
---

<h1>{{ page.title }}</h1>
<small>{{ page.date | date: "%-d %B %Y" }}</small>
<p class="view">{{ page.author | default: site.author }}</p>
{{content}}
{% if page.tags %}
  <small>tags: <em>{{ page.tags | join: "</em> - <em>" }}</em></small>
{% endif %}

{% if page.use_mathjax %}
  {% include mathjax.liquid %}
{% endif %}
{% if page.use_mermaid %}
  {% include mermaid.liquid %}
{% endif %}
{% if page.giscus_comments %}
  {% include giscus.liquid %}
{% endif %}
